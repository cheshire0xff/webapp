@page
@model WebApp.Pages.CV.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.CvFile == null)
{
<p>
    <a asp-page="Create">Create New</a>
</p>
}
@if (Model.CvFile != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    CV
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    Your CV
                </td>
                <td>
                    <a asp-page-handler="Download">Download</a> |
                    <a asp-page-handler="Delete">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
    <iframe src="/CV/Index?&handler=Download"
            width="100%"
            height="800px"
            style="border: none;">
        <p>
            Your browser does not support PDFs.
            <a href="/CV/Index?handler=Download">Download the PDF</a>.
        </p>
    </iframe>
}
