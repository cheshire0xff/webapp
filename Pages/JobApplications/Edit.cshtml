@page
@model WebApp.Pages.JobApplications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>JobApplication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobApplication.Id" />
            @if (User.IsInRole("Administrator"))
            {
                <div class="form-group">
                    <label asp-for="JobApplication.JobOfferId" class="control-label"></label>
                    <input asp-for="JobApplication.JobOfferId" class="form-control" />
                    <span asp-validation-for="JobApplication.JobOfferId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobApplication.UserId" class="control-label"></label>
                    <input asp-for="JobApplication.UserId" class="form-control" />
                    <span asp-validation-for="JobApplication.UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobApplication.FileId" class="control-label"></label>
                    <input asp-for="JobApplication.FileId" class="form-control" />
                    <span asp-validation-for="JobApplication.FileId" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="JobApplication.JobOfferId" />
                <input type="hidden" asp-for="JobApplication.UserId" />
                <input type="hidden" asp-for="JobApplication.FileId" />
            }
            <div class="form-group">
                <label asp-for="JobApplication.Status" class="control-label"></label>
                <select asp-for="JobApplication.Status" asp-items="Html.GetEnumSelectList<WebApp.Models.Status>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="JobApplication.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
