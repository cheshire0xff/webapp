@page
@model WebApp.Pages.JobApplications.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="float-left">
    <h4>JobApplication</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            CV
        </dt>
        <dd class="col-sm-10">
            <a asp-page-handler="Download" asp-route-id="@Model.JobApplication.fileId">Download</a> |
        </dd>
    </dl>
</div>

<div class="float-right" style="height: 800px">
    <iframe src="/JobApplications/Details?id=@Model.JobApplication.fileId&handler=Download"
            width="100%"
            height="100%"
            style="border: none;">
        <p>
            Your browser does not support PDFs.
            <a href="/JobApplications/Details?id=@Model.JobApplication.fileId&handler=Download">Download the PDF</a>.
        </p>
    </iframe>
</div>

<div class="float-clear"></div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.JobApplication.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
